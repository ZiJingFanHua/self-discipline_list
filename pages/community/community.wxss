/* pages/community/community.wxss */
.search-box {
  position: fixed;
  background-color: white;
  top: 0;
  left: 0;
  width: 100%;
  height: 75rpx;
}

.search {
  border-radius: 10rpx;
  /* border: 1rpx solid red; */
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
  margin: 10rpx 40rpx;
  padding: 0 40rpx;
  background-color: #f3f0f0;
}
.content {
  display: flex;
  margin-top: 100rpx;
}
.content-nav {
  display: flex;
  justify-content: left;
  padding-left: 25rpx;
}
.content-nav .title {
  margin: 0 20rpx;
  color: rgba(150, 153, 162, 1);
}
.content-nav .active {
  color: rgba(4, 24, 51, 1);
}