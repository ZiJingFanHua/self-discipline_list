/* pages/addTask/addTask.wxss */
.task-title {
  display: flex;
  margin: 20rpx 0 50rpx 40rpx;
}
.task-title .title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #212122;
  opacity: 1;
  margin-right: 30rpx;
}
.title-input {
  border-bottom: 2rpx solid rgba(238, 238, 238, 0.39);
  width: 500rpx;
}
.dead-line {
  margin: 20rpx 0 50rpx 40rpx;
}
.dead-line .title{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #212122;
  opacity: 1;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
}
.dead-line  .date-btns {
  display: flex;
  justify-content: left;
}
.dead-line  .date-btns view{
  width: 120rpx;
  height:70rpx;
  margin-right: 50rpx;
  border-radius: 35rpx;
  font-size: 32rpx;
  line-height: 70rpx;
  text-align: center;
  background-color: #dfdbdb;
}
.dead-line  .date-btns .custom {
  width: 220rpx;
}
.dead-line  .date-btns .custom i {
  font-size: 32rpx;
  line-height: 70rpx;
}
.dead-line .date-btns .activeTime {
  background-color: orange;
  color: white;
}
.interge {
  display: flex;
  margin: 20rpx 0 40rpx 40rpx;
}
.interge .title{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #212122;
  opacity: 1;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
}
.interge.interge-input{
  width: 500rpx;
  border-bottom: 2rpx solid rgba(238, 238, 238, 0.39);
}

.sub-task {
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
}
.sub-task text {
  font-size: 36rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #212122;
  opacity: 1;
  margin-right: 30rpx;
}

.sub-tasks {
     padding:20rpx 40rpx 0 80rpx;
}
.sub-tasks .task {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.sub-tasks .task view {
  color: #3a3a3b;
}
.sub-tasks .task i {
  font-size:26rpx;
}

.add-sub-task {
  display: flex;
  justify-content: left;
  padding: 0 40rpx;
  margin-bottom: 40rpx;
}
.add-sub-task i{
  margin-right: 30rpx;
  font-size: 36rpx;
  line-height: 48rpx;
}

.add-sub-task input {
  width: 500rpx;
  height: 36rpx;
  font-size: 32rpx;
  line-height: 36rpx;
  margin-right: 20rpx;
}
.add-sub-task .add {
  font-size: 32rpx;
  line-height: 48rpx;
  width: 100rpx;
  height: 48rpx;
  text-align: center;
  background-color: green;
  color: white;
  border-radius: 20rpx;
}
.details {
  padding: 0 40rpx;
}
.details  .title{
  font-size: 40rpx;
  font-weight: bold;
  line-height: 40rpx;
  color: #212122;
  opacity: 1;
  margin-right: 30rpx;
  margin-bottom: 40rpx;
}
.add-task {
  width: 143px;
  height: 44px;
  background: rgba(0, 174, 125, 0.39);
  opacity: 1;
}