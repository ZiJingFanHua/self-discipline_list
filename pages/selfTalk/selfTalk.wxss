/* pages/selfTalk/selfTalk.wxss */
page {
  background-color:  rgba(240, 241, 245, 1);
 }
.talk-boxs {
  margin-top: 40rpx;
} 
.talk-box {
  background-color: white;
  margin: 0 20rpx;
  margin-bottom: 30rpx;
  padding: 20rpx 20rpx;
  border-radius: 20rpx;
}
.talk-box .user-message {
  display: flex;
}
.talk-box .user-message .user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.talk-box .user-message .user-img image {
  width: 100%;
  height: 100%;
}
.talk-box .user-message .name {
  height: 48rpx;
  line-height: 118%;
}
.talk-box .user-message .message {
  display: flex;
  align-items: center;
}
.talk-box  .text-content{
  margin: 20rpx 0;
  max-height: 200rpx;
}
.talk-box .buttom-boxs {
  display: flex;
  justify-content: space-around;
}
.talk-box .buttom-boxs  .iconfont{
  font-size: 44rpx;
}
.talk-box .buttom-boxs button {
  margin: 0;
  padding: 0;
  background-color: transparent;
  width: 40rpx;
  font-weight: 500;
  line-height: 100%;
  height: 100%;
  font-size: 44rpx;
}