/* pages/talk-detailed/talk-detailed.wxss */
page {
  background-color:  rgba(240, 241, 245, 1);
 }
.talk-boxs {
  /* margin-top: 40rpx; */
} 
.talk-box {
  background-color: white;
  padding: 20rpx 20rpx;
  border-radius: 20rpx;
}
.talk-box .user-message {
  display: flex;
}
.talk-box .user-message .user-img{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.talk-box .user-message .user-img image {
  width: 100%;
  height: 100%;
}
.talk-box .user-message .name {
  height: 48rpx;
  line-height: 118%;
}
.talk-box .user-message .message {
  display: flex;
  align-items: center;
}
.talk-box  .text-content{
  margin: 40rpx 0;
  max-height: 200rpx;
}
.talk-box .buttom-boxs {
  display: flex;
  justify-content: space-around;
}
.talk-box .buttom-boxs  .iconfont{
  font-size: 44rpx;
}
.talk-box .buttom-boxs button{
  margin: 0;
  padding: 0;
  background-color: transparent;
  width: 40rpx;
  font-weight: 500;
  line-height: 100%;
  height: 100%;
  font-size: 44rpx;
}
.comment-contnet {
  margin-top: 40rpx;
  background-color: white;
}
.comment-contnet .nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 20rpx;
}
.comment-contnet .content {
  max-width: 200rpx;
  text-align: left;
  word-break:break-all;
  /* word-wrap:break-word;
  white-space:pre-wrap; */
}
.comment-contnet .buttom-boxs{
  display: flex;
  justify-content: space-between;
  padding: 0 30rpx;
  align-items: center;
  width: 180rpx;
  height: 80rpx;
  text-align: center;
  background-color:  #F0F1F5;
  border-radius: 40rpx;
}
.comment-contnet .buttom-boxs .buttom{
  width: 120rpx;
  height: 60rpx;
  color: rgba(166, 168, 173, 1);
  border-radius: 30rpx;
  line-height: 60rpx;
}
.comment-contnet .buttom-boxs .active{
  background-color: white;
  color: black;
}
.comment-box {
  padding-left: 40rpx;
}
.comment-box .user-message{
  display: flex;
  padding-bottom: 20rpx;
}
.comment-box .user-message .user-img {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
 .comment-box .user-message .user-img image {
  width: 100%;
  height: 100%;
}
.comment-box .user-message .user-name {
  height: 60rpx;
  line-height: 60rpx;
 color: rgba(166, 168, 173, 1);
}
.comment {
  margin-left: 78rpx;
  margin-right: 40rpx;
}
.comment-footer {
  display: flex;
  justify-content: space-between;
   margin-top: 40rpx;
   margin-left: 78rpx;
   padding-bottom: 40rpx;
   padding-right: 40rpx;
   color: rgba(166, 168, 173, 1);
   font-size: 24rpx;
   border-bottom: 1rpx solid #A6A8AD;
}
.comment-footer .comment-each{
  display: flex;
  font-size: 30rpx;
  color: black;
  /* justify-content: space-between; */
  flex-direction: row-reverse;
  width: 250rpx;
}

.reply {
  box-sizing: border-box;
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  position: fixed;
  bottom: 0;
  padding: 0 40rpx;
}
.reply-text {
  border-radius: 10rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
  margin: 10rpx 40rpx;
  padding: 0 20rpx;
  background-color: #F0F1F5;
}
.submit {
  width: 120rpx !important;
  height: 60rpx;
  opacity: 1;
  border-radius: 40rpx;
  background-color: blue;
  color: white;
  text-align: center;
  line-height: 60rpx;
  margin-right: 40rpx;
  padding: 0 0 0 0 !important;
  /* background-color: linear-gradient(90deg, #0051FF 0%, #0045D9 100%); */
}

.children-comment {
  padding-top: 20rpx;
  padding-right: 30rpx;
}
.children-comment .comment-contnet {
  display: flex;
}
.children-comment  .message {
  display:flex;
  flex-shrink: 0;
  margin-left: 85rpx;
  margin-right: 20rpx;
}
.children-comment  .message image {
  flex-shrink: 0;
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
}
.children-comment  .message .user {
  margin-left: 20rpx;
  font-size: 24rpx;
  line-height: 50rpx;
}
.children-comment .comment-contnet{
  margin-top: 0;
}
.children-comment   .content {
  font-size: 24rpx;
  line-height: 50rpx;
}
.children-comment-footer {
  display: flex;
  justify-content: space-between;
   margin-top: 10rpx;
   margin-left: 78rpx;
   padding-bottom: 40rpx;
   padding-right: 20rpx;
   color: rgba(166, 168, 173, 1);
   font-size: 24rpx;
   border-bottom: 1rpx dashed #A6A8AD;
}
.children-comment-footer .likes {
  color: black;
}
