/* pages/replyList/replayList.wxss */
.title {
  height: 60rpx;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
  border-bottom: 1rpx solid #f5dfdf;
}
.reply-box {
  display: flex;
  padding: 30rpx 0 0 20rpx;
}

.reply-box .right {
  display: flex;
  width: 100%;
  border-bottom: 1rpx solid #f5dfdf;
  padding-bottom: 30rpx;
}
.reply-box  .user-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}
.reply-box  .user-img image {
  width: 100%;
  height: 100%;
  flex-shrink: 0;
}
.reply-box  .content {
margin-left: 30rpx;
width: 550rpx;
}
.reply-box  .content .message{
  display: flex;
  font-size: 24rpx;
}
.reply-box  .content .message .time {
  margin-left: 20rpx;
}
.new {
  font-size: 140rpx;
  line-height: 45rpx;
  color: red;
}