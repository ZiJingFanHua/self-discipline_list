.page {
  /* background-color: #f3f0f0; */
  background-color: white;
  min-height: 2000rpx;
  padding-top: 95rpx;
}
.search-box {
  position: fixed;
  background-color: white;
  top: 0;
  left: 0;
  width: 100%;
  height: 75rpx;
}

.search {
  border-radius: 10rpx;
  /* border: 1rpx solid red; */
  height: 55rpx;
  line-height: 55rpx;
  font-size: 30rpx;
  margin: 10rpx 40rpx;
  padding: 0 40rpx;
  background-color: #f3f0f0;
}
.reward-list {
  padding: 0 50rpx;
}


.reward-box {
  display: flex;
  height: 100rpx;
  padding: 0 20rpx;
  margin-bottom: 20rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  font-weight: 500;
  justify-content: space-between;
  /* border: 3rpx solid skyblue; */
  border-radius: 10rpx;
  box-shadow: 0 1rpx 1rpx 1rpx #ada9a9;
  background-color: #f3f0f0;
}
.reward-box .integral {
  color: red;
}
.complete {
 position: fixed;
 width: 500rpx;
 padding: 25rpx;
 height: 200rpx;
 top: 280rpx;
 left: 140rpx;
 background-color: green;
}
.buttons {
  display: flex;
  justify-content: flex-end;
}
.buttons button {
  width: 100rpx !important;
  height: 50rpx;
  margin: 0 !important;
  padding: 0 !important;
  text-align: center;
  background-color: transparent;
}

.btns {
  position: fixed;
  display: flex;
  justify-content: flex-end;
  width: 100%;
  bottom: 50rpx;
  right: 70rpx;
}

.btns .cir-btn {
  width: 100rpx;
  height: 100rpx;
  background-color: #1a837e;
  border-radius: 50%;
  margin-left: 20rpx;
  box-shadow: 0 10rpx 8rpx 6rpx #ddddd7;
}
.btns .cir-btn i {
  box-shadow: white;
  display: inline-block;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  font-size: 40rpx;
  color: white;
}
